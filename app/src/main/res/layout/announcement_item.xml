<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/fav_size"
            android:layout_height="@dimen/fav_size"
            android:background="@color/gray_main"
            android:padding="1dp"
            app:cardCornerRadius="@dimen/corner_radius">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/place" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/fav_size"
            android:layout_marginStart="@dimen/padding"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/demibold"
                    android:maxLines="2"
                    android:text="DJI Phantom3 Professional"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0"
                    android:src="@drawable/ic_bookmark" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/day"
                android:textColor="@color/text_secondary_light2"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/demibold"
                android:text="100 usd"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="@dimen/padding"
                android:ellipsize="end"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:lines="1"
                android:text="Киев, Дарнецкий"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/medium"
                android:text="29 января, 01:22"
                android:textColor="@color/text_secondary_light2"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>