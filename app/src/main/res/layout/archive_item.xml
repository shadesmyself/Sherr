<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/act_size"
            android:layout_height="@dimen/act_size"
            android:background="@color/gray_main"
            android:padding="1dp"
            app:cardCornerRadius="@dimen/corner_radius">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/place" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/fav_size"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding"
                android:ellipsize="end"
                android:fontFamily="@font/demibold"
                android:lines="2"
                android:maxLines="2"
                android:text="DJI Phantom3 Professional"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/day"
                    android:textColor="@color/text_secondary_light2"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/week"
                    android:textColor="@color/text_secondary_light2"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/month"
                    android:textColor="@color/text_secondary_light2"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/demibold"
                    android:gravity="start"
                    android:text="60 usd"
                    android:textColor="@color/text_green"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/demibold"
                    android:gravity="start"
                    android:text="100 usd"
                    android:textColor="@color/text_green"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/demibold"
                    android:gravity="start"
                    android:text="350 usd"
                    android:textColor="@color/text_green"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/a_msg"
                    android:drawablePadding="@dimen/padding"
                    android:gravity="start"
                    android:text="2"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/a_eye"
                    android:drawablePadding="@dimen/padding"
                    android:gravity="start"
                    android:text="12"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/a_bookmark"
                    android:drawablePadding="@dimen/padding"
                    android:gravity="start"
                    android:text="6"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/medium"
                android:text="29 января, 01:22"
                android:textColor="@color/text_secondary_light2"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/text_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding"
            android:layout_weight="1"
            android:background="@drawable/gray_btn"
            android:gravity="center"
            android:padding="@dimen/text_margin"
            android:text="@string/actions"
            android:textColor="@color/white"
            app:fontFamily="@font/demibold" />

        <TextView
            android:id="@+id/tvPay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding"
            android:layout_weight="1"
            android:background="@drawable/orange_btn"
            android:gravity="center"
            android:padding="@dimen/text_margin"
            android:text="@string/activate"
            android:textColor="@color/white"
            app:fontFamily="@font/demibold" />

    </LinearLayout>
</LinearLayout>